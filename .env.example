# Nano Photo 环境配置文件
# 复制此文件为 .env 并填入真实的配置值

# 服务器配置
PORT=3000
NODE_ENV=development

# Nano banana API 配置
NANO_API_URL=https://api.nano-banana.com/v1
NANO_API_KEY=your-nano-banana-api-key-here

# 数据库配置（如果需要）
DATABASE_URL=postgresql://username:password@localhost:5432/nanophoto

# Redis配置（用于缓存和会话）
REDIS_URL=redis://localhost:6379

# 文件存储配置
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=nano-photo-images
AWS_REGION=us-east-1

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# JWT密钥（如果需要用户认证）
JWT_SECRET=your-super-secret-jwt-key

# 邮件服务配置（用于通知）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 支付配置（如果需要付费功能）
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxx

# 监控和日志
SENTRY_DSN=https://xxxxxxxxxx@sentry.io/xxxxxxxxxx

# 速率限制配置
RATE_LIMIT_POINTS=10
RATE_LIMIT_DURATION=60

# 文件上传限制
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp